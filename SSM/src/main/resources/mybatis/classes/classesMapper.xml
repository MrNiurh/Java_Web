<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="classes.classesMapper">


	<!-- 搜索框查询 -->
	<select id="searchAllClasses" parameterType="pd" resultType="pd">
		select
		* from classes
		<where>
			<if test="key!=null and key != ''">
				class_name like "%"#{key}"%"
			</if>
		</where>
	</select>

	<!-- 所有free课程信息 -->
	<select id="getAllClasses" parameterType="pd" resultType="pd">
		select
		* from classes
		<where>
			<if test="f_id !=null and f_id != '' and f_id!=0">
				f_id=#{f_id}
			</if>
			<if
				test="class_tags !=null and class_tags != '' and class_tags !=0">
				and class_tags=${class_tags}
			</if>
			<if
				test="class_level !=null and class_level != '' and class_level!=0">
				and class_level = ${class_level}
			</if>
		</where>
	</select>
	<!-- 所有分类信息 -->
	<select id="selectAllStype" parameterType="pd" resultType="pd">
		select
		* from lesson_secondtype
	</select>
	<select id="selectAllLevel" parameterType="pd" resultType="pd">
		select
		* from class_level
	</select>
	<select id="selectOneType" parameterType="pd" resultType="pd">
		select
		* from lesson_thirdtype
		<where>
			<if test="b!=0 and b != null and b != ''">
				id=${b}
			</if>
		</where>
	</select>
	<!-- 所有free课程信息 -->
	<select id="selectTags" resultType="pd">
		select
		* from lesson_thirdtype
		<where>
			<if test="way !=0 and way !=null and way !=''">
				lesson_secondtype = #{way}
			</if>
		</where>
	</select>
	<!-- 所有free课程信息 -->
	<select id="getClassesByType" parameterType="pd" resultType="pd">
		select
		* from classes
	</select>
	<!-- 所有free课程信息 -->
	<select id="getHClassesByType" parameterType="pd"
		resultType="pd">
		select
		* from classes where
		class_level ="1" or class_level
		="0"
	</select>

	<!-- 单个课程信息 -->
	<select id="getOneClass" parameterType="pd" resultType="pd">
		select * from classes
		<where>
			<if test="id != null and id != ''">
				id=#{id}
			</if>
		</where>
	</select>
	<!-- 根据大类型查询 -->
	<select id="selectCLassByClassType" parameterType="pd"
		resultType="pd">
		select * from classes
		<where>
			<if test="class_level!='' and class_level != 0">
				class_level =#{class_level}
			</if>
			<if test="f_id!=0 and f_id !=''">
				and f_id = #{f_id}
			</if>
			<if test="classTags!=null and classTags !=''">
				and class_tags LIKE
				"%"#{class_tags}"%"
			</if>
		</where>
	</select>

	<!-- 根据大类型查询 -->
	<select id="selectHCLassByClassType" parameterType="pd"
		resultType="pd">
		select * from classes
		<where>
			<if test="class_level!=null and class_level != ''">
				class_level ="0" or class_level ="1"
			</if>
			<if test="lesson_type!=null and lesson_type !=''">
				and class_type=(select id from
				lesson_type where
				lesson_type=#{lesson_type})
			</if>
			<if test="classTags!=null and classTags !=''">
				and class_tags LIKE
				"%"#{class_tags}"%"
			</if>
			<if test="class_level！=null and class_level !=''">
				and class_level = #{class_level}
			</if>
		</where>
	</select>

</mapper>